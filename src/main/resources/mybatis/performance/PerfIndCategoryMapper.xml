<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.attendance.project.performance.mapper.PerfIndCategoryMapper">
    
    <resultMap type="PerfIndCategory" id="PerfIndCategoryResult">
        <result property="categoryId"    column="category_id"    />
        <result property="projectId"    column="project_id"    />
        <result property="categoryName"    column="category_name"    />
        <result property="scoreType"    column="score_type"    />
        <result property="weight"    column="weight"    />
        <result property="sort"    column="sort"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectPerfIndCategoryVo">
        select category_id, project_id, category_name, score_type, weight, sort, create_by, create_time from perf_ind_category
    </sql>

    <select id="selectPerfIndCategoryList" parameterType="PerfIndCategory" resultMap="PerfIndCategoryResult">
        <include refid="selectPerfIndCategoryVo"/>
        <where>  
            <if test="projectId != null "> and project_id = #{projectId}</if>
            <if test="categoryName != null  and categoryName != ''"> and category_name like concat('%', #{categoryName}, '%')</if>
            <if test="scoreType != null  and scoreType != ''"> and score_type = #{scoreType}</if>
            <if test="weight != null "> and weight = #{weight}</if>
            <if test="sort != null "> and sort = #{sort}</if>
        </where>
    </select>
    
    <select id="selectPerfIndCategoryByCategoryId" parameterType="Long" resultMap="PerfIndCategoryResult">
        <include refid="selectPerfIndCategoryVo"/>
        where category_id = #{categoryId}
    </select>
        
    <insert id="insertPerfIndCategory" parameterType="PerfIndCategory" useGeneratedKeys="true" keyProperty="categoryId">
        insert into perf_ind_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="projectId != null">project_id,</if>
            <if test="categoryName != null and categoryName != ''">category_name,</if>
            <if test="scoreType != null and scoreType != ''">score_type,</if>
            <if test="weight != null">weight,</if>
            <if test="sort != null">sort,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="projectId != null">#{projectId},</if>
            <if test="categoryName != null and categoryName != ''">#{categoryName},</if>
            <if test="scoreType != null and scoreType != ''">#{scoreType},</if>
            <if test="weight != null">#{weight},</if>
            <if test="sort != null">#{sort},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updatePerfIndCategory" parameterType="PerfIndCategory">
        update perf_ind_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="projectId != null">project_id = #{projectId},</if>
            <if test="categoryName != null and categoryName != ''">category_name = #{categoryName},</if>
            <if test="scoreType != null and scoreType != ''">score_type = #{scoreType},</if>
            <if test="weight != null">weight = #{weight},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where category_id = #{categoryId}
    </update>

    <delete id="deletePerfIndCategoryByCategoryId" parameterType="Long">
        delete from perf_ind_category where category_id = #{categoryId}
    </delete>

    <delete id="deletePerfIndCategoryByCategoryIds" parameterType="String">
        delete from perf_ind_category where category_id in 
        <foreach item="categoryId" collection="array" open="(" separator="," close=")">
            #{categoryId}
        </foreach>
    </delete>

    <delete id="deletePerfIndCategoryByProjectId" parameterType="Long">
        delete from perf_ind_category where project_id = #{projectId}
    </delete>
</mapper>